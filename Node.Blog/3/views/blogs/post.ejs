<!DOCTYPE html>
<html lang="en">
<%-include('../partials/head.ejs')%>
<body>

<%- include('../partials/nav.ejs')%>

    <h2>Blogpost</h2>
    
      <div class="details content">
          <h2><%= blog.title %> </h2><hr>
          
        <div class="content">
            <p><%= blog.body %></p>
        </div>
<a class="delete" data-doc="<%= blog._id%>" onclick="deletePost('<%= blog._id%>')"><img src="/delete.svg"></a>
</div>
<%-include('../partials/footer.ejs')%>
<script>

    function deletePost(blogId){

        fetch(`/blogs/${blogId}`, {
            method: 'DELETE'
        })
            .then((response) => response.json())
            .then((data) => {
                console.log(data);
                window.location.href="/blogs";
            })
            .catch(err => console.log(err))
    }

</script>
</body>
</html>